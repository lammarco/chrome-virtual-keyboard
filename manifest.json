{
  "name": "Virtual Math Keyboard",
  "description": "On-screen virtual math keyboard",
  "manifest_version": 3,
  "version": "1.02",
  "icons": { "16": "keyboard.png",
           "48": "keyboard.png",
          "128": "keyboard.png" },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": "buttons/keyboard_0.png",
	"default_title": "Virtual Keyboard Toggle",
    "default_popup": "toggle.html"
  },
  "permissions": [],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [{
	  "resources": [
		"keyboard.html",
		"keyboard_*.html",
		"style.css",
		"options/*",
		"toggle.html",
		"toggle.js",
		"icons/*",
		"icons/backspace.png",
		"icons/backspace-e.png",
		"icons/close.png",
		"icons/enter.png",
		"icons/enter-e.png",
		"icons/settings.png",
		"icons/shift.png",
		"buttons/*"
	  ],
	 "extension_ids": [
		"mebheaenpckpmlaimolcagneiddkclbc",
		"pabmfigogfhklokgbjalipcgdplmfdmg"
	  ]
  }],
  "content_security_policy": {
	  "script-src": "'self' 'unsafe-eval'",
	  "object-src": "'self'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
	  "run_at": "document_end",
	  "all_frames": true
    }
  ]
}